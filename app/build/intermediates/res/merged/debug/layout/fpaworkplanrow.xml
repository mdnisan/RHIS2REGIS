<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/secListRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cmdB1"
            android:layout_width="50sp"
            android:layout_height="60sp"
            android:background="#ffd866"
            android:text="Edit"
            android:textSize="14px" android:visibility="gone"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" "/>

        <Button
            android:id="@+id/cmdB22"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:background="#00B7FB"
            android:text="View"
            android:textColor="#FFFFFF"
            android:textSize="14px" android:visibility="gone"/>

        <TextView
            android:id="@+id/cWorkPlanId"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/workPlanDate"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:visibility="visible"/>
        <Button
            android:id="@+id/cmdB2"
            android:layout_width="300dp"
            android:layout_height="60sp"
            android:background="#00B7FB"
            android:text=" কর্মসূচী সংযোজন"
            android:textColor="#FFFFFF"
            android:textSize="14px"/>

      <!--  <TextView
            android:id="@+id/itemdes"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"/>-->
    </LinearLayout>
</LinearLayout>
