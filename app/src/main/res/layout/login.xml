<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 android:background="#FFFFFF">
    		<TableLayout 
				android:id="@+id/firsttab1"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:paddingLeft="0sp"
				android:paddingRight="0sp"
				android:stretchColumns="1">
                <LinearLayout android:paddingTop="30sp"
                    android:layout_width="fill_parent" android:background="#FFFFFF"
                    android:layout_height="wrap_content" android:layout_gravity="center">
                    <ImageView android:src="@drawable/govtlogo"
                        android:layout_width="fill_parent"
                        android:layout_height="45sp"
                        android:gravity="center"
                        android:paddingLeft="10px"
                        android:paddingRight="10px"
                        android:text="@string/app_name"
                        android:textColor="#FF0000"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout android:layout_marginTop="0sp" android:layout_marginBottom="20sp"
				    android:layout_width="fill_parent" android:background="#FFFFFF"
				    android:layout_height="wrap_content" android:layout_gravity="center">
		            <TextView
		                android:layout_width="fill_parent"
		                android:layout_height="45sp"
		                android:gravity="center"
		                android:paddingLeft="10px"
		                android:paddingRight="10px"
		                android:text="@string/app_name"
		                android:textColor="#FF0000"
		                android:textSize="25sp" />
		            		            
				</LinearLayout>	 				
		        <TableRow android:paddingBottom="5sp" android:gravity="center"  android:background="#C2E0EC">

		            <TextView
		                android:id="@+id/lblSystemDate"
		                android:layout_height="30sp"
		                android:layout_column="0"
		                android:gravity="center"
		                android:text="09 Jul 2014"
		                android:textColor="#000000"
		                android:textSize="20sp" />

		        </TableRow>
		        <View android:layout_height="1dip" android:background="#CCCCCC" android:layout_marginTop="0sp"/>			        
	        	
				<LinearLayout
			      android:id="@+id/LinearLayout1" android:layout_marginLeft="20sp" android:layout_marginRight="20sp"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content" android:layout_marginTop="10sp"
			      android:padding="5dip" >
					<TableLayout
							android:id="@+id/firsttab"
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:paddingLeft="30sp"
							android:paddingRight="30sp"
                            android:orientation="horizontal">

						<TableRow android:gravity="center" android:layout_marginTop="30sp">
							  <TextView android:layout_width="fill_parent"
							  		android:layout_height="wrap_content" android:layout_column="0"
							  		android:textColor="#000000" android:layout_span="2"
							  		android:text="সেবা প্রদানকারী"/>
						</TableRow>
		    		    												
		    		    <TableRow android:gravity="center">
		    		    	  <Spinner
											android:id="@+id/userId" 
											android:textSize="25sp"
											android:layout_width="250sp" 
											android:layout_height="wrap_content"
											android:drawSelectorOnTop="true" android:enabled="true"/>
						</TableRow>
						<TableRow  android:gravity="center" android:layout_marginTop="30sp">
							  <!--  Password Label -->
							  <TextView android:layout_width="250sp" 
							  		android:layout_height="wrap_content" android:layout_column="0"
							  		android:textColor="#000000" android:layout_span="2"
							  		android:text="পাসওয়ার্ড"/>
						</TableRow>
						<TableRow  android:gravity="center">
							  <EditText android:id="@+id/pass" android:layout_span="2"
							      	android:layout_width="fill_parent"
							  		android:layout_height="wrap_content" android:inputType="textPassword"
							  		android:layout_marginTop="5dip" android:layout_marginBottom="5dip"
							  		android:singleLine="true"
							  		android:password="true" android:text=""/>
						</TableRow>
	
						<LinearLayout
						      android:id="@+id/LinearLayout11" android:layout_marginTop="20sp"
						      android:layout_width="wrap_content"
						      android:layout_height="wrap_content" android:gravity="center"
						      android:padding="5dip" >
							  <Button android:id="@+id/btnLogin"  android:background="@drawable/button_style"
							  		android:layout_width="150sp"
							  		android:layout_height="wrap_content"
							  		android:layout_marginTop="10dip"
							  		android:layout_marginBottom="10sp"
							  		android:text="Login"/> 
							  <Button android:id="@+id/btnClose" android:layout_marginLeft="20sp"
                                  android:background="@drawable/button_style"
							  		android:layout_width="150sp"
							  		android:layout_height="wrap_content"
							  		android:layout_marginTop="10dip"
							  		android:layout_marginBottom="10sp"
							  		android:text="Close"/> 
						      		
            							  								  		
						</LinearLayout>		
					</TableLayout>
					</LinearLayout>
								
				<View android:visibility="gone" android:layout_height="1dip" android:background="#CCCCCC" android:layout_marginTop="0sp"/>
																			
			</TableLayout>    		
</RelativeLayout>
