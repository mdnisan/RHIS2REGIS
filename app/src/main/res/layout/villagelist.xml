<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


	<LinearLayout android:layout_width="fill_parent" android:background="#F3F3F3" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">
        <TextView
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="উপজিলাঃ"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtUpazila"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:textSize="20sp" />	

            <TextView
                android:layout_width="90sp"
                android:layout_height="40sp"
                android:layout_marginLeft="20sp"
                android:gravity="left"
                android:text="ইউনিয়নঃ"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtUnion" 
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:textSize="20sp" />		
            	    
    </LinearLayout>	
	<LinearLayout android:layout_width="fill_parent" android:background="#C2E0EC" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">
        <TextView
                android:layout_width="120sp"
                android:layout_height="30sp"
                android:layout_marginBottom="5sp"
                android:gravity="left"
                android:text="মৌজা"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spnMouza" style="@style/customEdit"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:prompt="@string/planet_prompt"
                android:textSize="16sp" />	
    </LinearLayout>	
    <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
	<LinearLayout android:layout_width="fill_parent" android:background="#C2E0EC" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">
            <TextView
                android:layout_width="120sp"
                android:layout_height="30sp"
                android:layout_marginBottom="5sp"
                android:gravity="left"
                android:text="ওয়ার্ড(নতুন)"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spnWardNew" style="@style/customEdit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:prompt="@string/planet_prompt"
                android:textSize="16sp" />		

            <TextView
                android:layout_width="130sp"
                android:layout_height="30sp"
                android:layout_marginBottom="5sp"
                android:gravity="left"
                android:text="  ওয়ার্ড(পুরাতন)"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spnWardOld" style="@style/customEdit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:drawSelectorOnTop="true"
                android:prompt="@string/planet_prompt"
                android:textSize="16sp" />		
            	    
    </LinearLayout>	
    <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
    
    <LinearLayout android:id="@+id/secFWAUnit" android:background="#C2E0EC"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">
        <TextView android:id="@+id/VlblFWAUnit" android:text="ইউনিট" android:layout_width="120sp" android:layout_height="wrap_content" android:textSize="18sp" />
        <Spinner android:id="@+id/spnFWAUnit" android:drawSelectorOnTop="true" android:layout_width="150sp" android:layout_height="wrap_content" android:layout_weight="0" android:prompt="@string/planet_prompt" android:textSize="20sp" style="@style/customEdit"/>
        <TextView android:id="@+id/VlblEPIBlock" android:text="  ই পি আই ব্লক" android:layout_width="130sp" android:layout_height="wrap_content" android:textSize="18sp" />
        <Spinner android:id="@+id/spnEPIBlock" android:drawSelectorOnTop="true" android:layout_width="100sp" android:layout_height="wrap_content" android:layout_weight="0" android:prompt="@string/planet_prompt" android:textSize="20sp" style="@style/customEdit"/>
    </LinearLayout>    	
	
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">		
            	    
    </LinearLayout>	    
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle0">
            <GridView
                android:id="@+id/gridMenu"
                android:layout_width="wrap_content"
                android:layout_height="500sp"
                android:numColumns="4" android:horizontalSpacing="5sp" />
    </LinearLayout>	   
	<View android:layout_height="1dip" android:layout_width="fill_parent" android:layout_marginTop="0sp" android:background="#D7D7D7"/>     
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowStyle1">
        <TextView
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Health ID Remaining"
            android:textColor="#006699"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtHIDRemaining"
            android:layout_width="100dp"
            android:textColor="#006699"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:textSize="25sp" />

    </LinearLayout>	    
</LinearLayout>
