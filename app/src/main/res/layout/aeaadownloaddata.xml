                android:layout_height="wrap_content"
                android:text="স্বাস্থ্য পরিদর্শকের কর্ম এলাকা ডাউনলোড"
                android:textSize="20sp" />
        </LinearLayout>
        <!-- <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />
    -->
        <LinearLayout
            android:id="@+id/secFpiName"
            style="@style/rowStyle0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/VlblSlNo"
                android:layout_width="260sp"
                android:layout_height="wrap_content"
                android:text="সহকারী স্বাস্থ্য পরিদর্শকের নাম"
                android:textSize="20sp" />
            <Spinner android:id="@+id/spnfpaCode"
                android:drawSelectorOnTop="true"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:prompt="@string/planet_prompt" android:textSize="20sp" />


        </LinearLayout>





        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#CCCCCC" />


        <LinearLayout
            android:id="@+id/secFpiWarea"
            style="@style/rowStyle0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/VlblFpiWarea"
                android:layout_width="260sp"
                android:layout_height="wrap_content"
                android:text="কর্ম এলাকা "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtFpiWarea"
                style="@style/customEdit"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:background="#D7D7D7"
                android:gravity="left"
                android:inputType="text"
                android:maxLength="50"
                android:textSize="20sp" />


        </LinearLayout>


        <View
