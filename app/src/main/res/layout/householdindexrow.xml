				android:id="@+id/secHHIndex"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" >

				<TableRow android:gravity="center_vertical">
					<TextView android:id="@+id/HHNo" android:paddingLeft="10sp"
					         android:layout_width="120sp" android:layout_marginTop="5dp"
					         android:layout_height="fill_parent" android:textSize="18sp"/>
					<TextView android:id="@+id/HHHead" android:layout_marginTop="5dp"
					         android:layout_width="350sp" android:textSize="18sp"
					         android:layout_height="40sp"/>
					<TextView android:id="@+id/TotalMem" android:layout_gravity="center" android:layout_marginTop="5dp"
					         android:layout_width="85sp" android:layout_height="fill_parent" android:textSize="18sp"/>
				</TableRow>
			</TableLayout>	
</RelativeLayout>		         									
