        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <!--<item name="android:spinnerDropDownItemStyle">@style/SpinnerItem</item>-->
        <!--<item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>-->
	</style>
    <style name="SpinnerItem">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#F3F3F3</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingBottom">5sp</item>
    </style>
    <style name="SpinnerDropDownItem">
        <item name="android:textColor">#006699</item>
        <item name="android:background">@drawable/edittext_round</item>
    </style>

	<style name="MyDropDownNav" parent="android:style/Theme.Holo.Light">
    	<item name="android:textColor">#ffffff</item>
    	<item name="android:background">#F3F3F3</item>
	</style>

	<style name="TBoxStyle" parent="@android:style/Widget.EditText">
	    <item name="android:textColor">#6699CC</item>
	    <item name="android:gravity">center</item>
	    <item name="android:padding">5sp</item>
	    <item name="android:textSize">20sp</item>
	</style>
	
	<style name="CKButton" parent="android:style/Widget.Button">
	  	<item name="android:textSize">19sp</item>
	  	<item name="android:layout_margin">0dip</item>
	  	<item name="android:width">400sp</item>
	  	<item name="android:background">#ff0000</item>
	</style>
	
	<style name="rowStyle0">
	    <item name="android:paddingTop">10sp</item>
	    <item name="android:paddingBottom">10sp</item>
	    <item name="android:background">#FFFFFF</item>
	    <item name="android:paddingRight">10sp</item>
	    <item name="android:paddingLeft">10sp</item>
	</style>
	<style name="rowStyle1">
	    <item name="android:paddingTop">10sp</item>
	    <item name="android:paddingBottom">10sp</item>
	    <item name="android:background">#C2E0EC</item>
	    <item name="android:paddingRight">10sp</item>
	    <item name="android:paddingLeft">10sp</item>
	</style>

    <style name="rowStyleEpi">
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingLeft">5sp</item>
    </style>
	<style name="rowHeading">
	    <item name="android:paddingTop">5sp</item>
	    <item name="android:paddingBottom">5sp</item>
	    <item name="android:background">#00B7FB</item>
	    <item name="android:textColor">#000000</item>
	    <item name="android:paddingRight">10sp</item>
	    <item name="android:paddingLeft">10sp</item>
	</style>
    <style name="rowTitleBar">
        <item name="android:background">#00B7FB</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:paddingLeft">0sp</item>
    </style>

    <style name="customEdit">
        <!-- <item name="android:typeface">serif</item>  -->
        <item name="android:textSize">14sp</item>
        <!-- <item name="android:textStyle">bold</item> -->         
        <item name="android:background">@drawable/edittext_round</item>
        <item name="android:padding">3sp</item>
    </style>

    <style name="customEditGridMenu">
        <!-- <item name="android:typeface">serif</item>  -->
        <item name="android:textSize">16sp</item>
